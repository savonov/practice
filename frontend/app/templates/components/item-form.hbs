<div class="form-group">
  <label>Title</label>
  {{input class="form-control" value=this.item.title}}
</div>

<div class="form-group">
  <label>Type</label>
  <select class="form-control" onchange={{action (mut this.item.type.value) value="target.value"}}>
    <option value="" disabled selected hidden>Select item type</option>
    {{#each this.item.type.options as |type|}}
      <option value={{type}} selected={{if (eq type this.item.type.value) 'true'}}>{{type}}</option>
    {{/each}}
  </select>
</div>

{{#if this.item.type.isText}}
  <div class="form-group">
    <label>Text</label>
    {{input class="form-control" value=this.item.value}}
  </div>
{{/if}}

{{#if this.item.type.isImage}}
  <div class="form-group">
    <label>Image</label>
    {{input class="form-control" value=this.item.value}}
  </div>

