{{#if this.item.type.isAudio}}
  <div class="form-group">
    <label>Audio</label>
    {{input class="form-control" value=this.item.value}}
  </div>
{{/if}}

{{#if this.displayButton}}
  <button class="btn btn-primary" onclick={{action 'submitAction'}}>Submit</button>
{{/if}}
