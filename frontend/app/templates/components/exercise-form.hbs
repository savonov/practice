<div class="form-group">
  <label for="titleExercise">Title</label>
  {{input class="form-control" value=this.exercise.title id="titleExercise"}}
</div>

<div class="form-group">
  <label for="descriptionExercise">Description</label>
  {{textarea class="form-control" value=this.exercise.description id="descriptionExercise" rows="3"}}
</div>

<div class="form-group">
  <label for="typeExercise">Type</label>
  <select class="form-control" onchange={{action (mut this.exercise.type.value) value="target.value"}}
          id="typeExercise">
    <option value="" disabled selected hidden>Select exercise type</option>
    {{#each this.exercise.type.options as |type|}}
      <option value={{type}} selected={{if (eq type this.exercise.type.value) 'true'}}>{{type}}</option>
    {{/each}}
  </select>
</div>
<button class="btn btn-primary" onclick={{action 'submitAction'}}>Submit</button>
