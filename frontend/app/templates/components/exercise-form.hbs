<form>
  <div class="form-group">
    <label for="titleExercise">
      Title
    </label>
    {{input class="form-control" value=this.exercise.title id="titleExercise"}}
  </div>
  <div class="form-group">
    <label for="descriptionExercise">
      Description
    </label>
    {{textarea
      class="form-control"
      value=this.exercise.description
      id="descriptionExercise"
      rows="3"
    }}
  </div>
  <div class="form-group">
    <label for="typeExercise">
      Type
    </label>
    <select
      class="form-control"
      value={{this.exercise.type.value}}
      onchange={{action (mut this.exercise.type.value) value="target.value"}}
      id="typeExercise"
    >
      {{#each this.exercise.type.options as |type|}}
        <option value={{type}}>
          {{type}}
        </option>
      {{/each}}
    </select>
  </div>
  <button type="button" class="btn btn-primary" {{action "submitAction"}}>
    Submit
  </button>
</form>