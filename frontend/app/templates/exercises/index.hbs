{{#link-to "exercises.create" class="btn btn-outline-dark"}}
{{material-icon "add_circle_outline" class="align-middle"}}
<span class="align-middle">
  ADD EXERCISE
</span>
{{/link-to}}
<br />
<br />
<div class="card">
  <div class="card-body">
    <table class="table">
      <thead>
        <tr>
          <th>#</th>
          <th>Title</th>
          <th>Type</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {{#each exercises as |exercise|}}
        <tr>
          <th>
            {{exercise.id}}
          </th>
          <td>
            {{exercise.title}}
          </td>
          {{!-- <td>{{exercise.type.value}}</td> --}}
          <td>
            {{exercise.type}}
          </td>
          <td>
            <a href="/exercises/{{exercise.type}}/{{exercise.id}}">
              {{material-icon "info"}}
            </a>
            {{!-- {{#link-to "exercises.view" exercise.id}}
            {{material-icon "info"}}
            {{/link-to}} --}}
            {{#link-to "exercises.update" exercise.id}}
            {{material-icon "edit"}}
            {{/link-to}}
            <a href="#" {{action "delete" exercise}}>
              {{material-icon "delete"}}
            </a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>